[Unit]
Description=AIOps Automation Agent
After=network.target
Wants=network.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/bin/aiops-agent
WorkingDirectory=/var/lib/aiops
Restart=always
RestartSec=5

# 安全设置
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/aiops /var/lib/aiops /tmp/aiops

# 资源限制
LimitNOFILE=65536

# 环境变量
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target